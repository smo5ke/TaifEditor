<?xml version="1.0" encoding="UTF-8"?>
<Package>
    <DisplayName>Taif</DisplayName>
    <Description>Taif Editor for Alif language.</Description>
    <Version>3.2.0</Version>
    <ReleaseDate>2026-01-20</ReleaseDate>
    <Licenses>
        <License name="Public License Agreement" file="license.txt" />
    </Licenses>
    <Default>true</Default>
    <RequiresAdminRights>true</RequiresAdminRights>
    <Operations>
        <Operation name="Execute">
            <Argument>bash</Argument>
            <Argument>-c</Argument>
            <Argument>echo export "PATH=@TargetDir@/alif:$PATH" >> ~/.zshrc</Argument>
            <Argument>source ~/.zshrc</Argument>
        </Operation>
        <Operation name="Execute">
            <Argument>bash</Argument>
            <Argument>-c</Argument>
            <Argument>ln -sf @TargetDir@/Taif.app ~/Desktop/Taif.app</Argument>
        </Operation>
    </Operations>
</Package>
